#!/bin/env bash
set -u;

for b in $(
    aws s3api list-buckets --output text --query Buckets[].[Name]
    );
do {
    echo $b;
    aws s3api get-bucket-policy --bucket $b --query Policy --output text 2>/dev/null |
    jq '.|select(.Id=="PutObjPolicy")|.Statement[]|select(.Condition)|.Condition';
} done

